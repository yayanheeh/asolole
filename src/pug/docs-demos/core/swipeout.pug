block scripts
  style.
    .icon-f7 {
      background: #EE350F;
      color: #fff !important;
      border-radius: 50%;
      text-align: center;
    }
    .icon-f7:before {
      content: '7';
    }
    .ios .icon-f7 {
      width: 29px;
      height: 29px;
      line-height: 29px;
    }
    .md .icon-f7 {
      width: 24px;
      height: 24px;
      line-height: 24px;
    }
  script.
    var app = new Framework7();

    var $$ = Dom7;

    $$('.alert-mark').on('click', function () {
      app.dialog.alert('Mark');
    });
    $$('.alert-reply').on('click', function () {
      app.dialog.alert('Reply');
    });
    $$('.alert-forward').on('click', function () {
      app.dialog.alert('Forward');
    });

    $$('.deleted-callback').on('swipeout:deleted', function () {
      app.dialog.alert('Thanks, item removed!');
    });

    var moreActions = app.actions.create({
      buttons: [
        [
          {
            text: 'Here comes some optional description or warning for actions below',
            label: true,
          },
          {
            text: 'Action 1',
          },
          {
            text: 'Action 2',
          },
        ],
        [
          {
            text: 'Cancel',
            bold: true,
          }
        ]
      ],
    });
    $$('.open-more-actions').on('click', function () {
      moreActions.open();
    });
